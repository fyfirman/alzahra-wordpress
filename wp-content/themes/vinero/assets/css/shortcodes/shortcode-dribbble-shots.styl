/*!  SHORTCODE DRIBBBLE SHOTS
----------------------------------------------------------*/
	
.vl-dribbble-shot
	line-height 0
	position relative
	
.vl-dribbble-shot-holder
	float left
	display block
	visibility hidden

.vl-dribbble-shots .vl-dribbble-title
	position absolute
	top 0
	left 0
	margin 15px
	padding 6px 20px
	color $c1
	z-index 3
	max-width 50%
	white-space nowrap
	text-overflow ellipsis
	overflow hidden
	line-height 1.9
	background-color $c6
	pointer-events none
	
.vl-dribbble-shots .vl-dribbble-link
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	
// GRID

.vl-dribbble-shots.gutter
	margin -15px

.vl-dribbble-shots.gutter .vl-dribbble-shot-holder
	padding 15px

.vl-dribbble-shots
	&[data-col="2"] .vl-dribbble-shot-holder
		width 50%
	&[data-col="3"] .vl-dribbble-shot-holder
		width 33.333%
	&[data-col="4"] .vl-dribbble-shot-holder
		width 25%
	&[data-col="5"] .vl-dribbble-shot-holder
		width 20%

@media (max-width: 767px)
	.vl-dribbble-shots
		&[data-col="3"] .vl-dribbble-shot-holder,
		&[data-col="4"] .vl-dribbble-shot-holder,
		&[data-col="5"] .vl-dribbble-shot-holder
			width 50%
	
@media (max-width: 575px)
	.vl-portfolio-masonry-wrapper,
	.vl-dribbble-shots
		&[data-col="2"] .vl-dribbble-shot-holder,
		&[data-col="3"] .vl-dribbble-shot-holder,
		&[data-col="4"] .vl-dribbble-shot-holder,
		&[data-col="5"] .vl-dribbble-shot-holder
			width 100%


