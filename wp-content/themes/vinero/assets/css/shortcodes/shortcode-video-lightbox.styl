/*!  SHORTCODE VIDEO LIGHTBOX
----------------------------------------------------------*/

.vl-video-lightbox-holder
	position relative
	line-height 0
	.vl-video-lightbox
		position absolute
		height 50px
		width 50px
		top 50%
		left 50%
		margin-left -25px
		margin-top -25px
		display flex
		align-items center
		justify-content center
		font-size 38px
		z-index 2
		color $c0
		background-color $c6
		&:hover
			color $c3