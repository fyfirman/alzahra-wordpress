/*!  SHORTCODE GOOGLE MAP
----------------------------------------------------------*/

.vl-map
	position relative
	
.vl-map-controls
	position absolute
	top 15px
	right 15px
	> div
		display block
		height 30px
		width 30px
		font-size 14px
		line-height 26px
		text-align center
		cursor pointer
		user-select none
		color $c6
		background-color $c0
		transition all 150ms $transition
		&:hover
			color $c6
			background-color $c1
	> div + div
		margin-top 5px