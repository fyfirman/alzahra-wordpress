/*!  ADDITIONAL CSS
----------------------------------------------------------*/


// SITE BORDER

.vl-site-border
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	pointer-events none
	z-index 2222
	border-style solid


// VC

.vc_col-has-fill>.vc_column-inner, 
.vc_row-has-fill+.vc_row-full-width+.vc_row>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill+.vc_row>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill+.vc_vc_row>.vc_row>.vc_vc_column>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill+.vc_vc_row_inner>.vc_row>.vc_vc_column_inner>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill>.vc_row>.vc_vc_column>.vc_column_container>.vc_column-inner, 
.vc_row-has-fill>.vc_vc_column_inner>.vc_column_container>.vc_column-inner, 
.vc_section.vc_section-has-fill, 
.vc_section.vc_section-has-fill+.vc_row-full-width+.vc_section, 
.vc_section.vc_section-has-fill+.vc_section
	padding-top 0 !important


// AUDIO MEJS

.span.mejs-time-total.mejs-time-slider
	outline none !important
	

// PRELOADER

.vl-preloader-holder
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 9999
	display flex
	align-items center
	justify-content center
	background-color $c6
	animation-fill-mode both
	img
		max-height 20px


// BACK TO TOP
	
.vl-back-to-top
	position fixed
	width 40px
	height 40px
	display flex
	align-items center
	justify-content center
	right 30px
	bottom 30px
	z-index 500
	font-size 12px
	background-color $c0
	color $c6
	transition all 300ms $transition

.vl-back-to-top:hover
	color $c6
	background-color $c1
	i
		animation animateIconTop 300ms forwards

	
.vl-back-to-top.hidden
	opacity 0
	visibility hidden
	transform translateX(20px)

.vl-back-to-top.visible
	opacity 1
	visibility visible
	transform translateX(0)


// CONTACT FORM 7

.wpcf7-form-control-wrap
	display block

.span.wpcf7-not-valid-tip
	font-size 60%
	top calc(100% + 2px)
	line-height 1
	position absolute

.wpcf7 br
	display none


// PRELOADER

.vl-preloader-holder
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	height 100vh
	display flex
	align-items center
	justify-content center
	z-index 3333

$circleOne = 80px
$circleTwo = 60px

.vl-preloader
	&::before, 
	&::after
		content ''
		display block
		border-radius 50%
		background-color $c6
	&::before
		height $circleOne
		width $circleOne
		box-shadow 0px -4px 8px 0px rgba($c0, .08)
		animation spinOne 3s $transition infinite
	&::after
		height $circleTwo
		width $circleTwo
		position absolute
		top 50%
		left 50%
		margin-top -($circleTwo/2)
		margin-left -($circleTwo/2)
		box-shadow 0px -4px 8px 0px rgba($c0, .08)
		animation spinTwo 3s $transition infinite

@keyframes spinOne
	100%
		transform rotate(360deg)

@keyframes spinTwo
	100%
		transform rotate(-360deg)

		

// ANIMATIONS

@keyframes animateIconTop
	49%
		transform translateY(-100%)
	50%
		opacity 0
		transform translateY(100%)
	51%
		opacity 1

@keyframes animateIconBottom
	49%
		transform translateY(100%)
	50%
		opacity 0
		transform translateY(-100%)
	51%
		opacity 1

@keyframes animateIconLeft
	49%
		transform translateX(-100%)
	50%
		opacity 0
		transform translateX(100%)
	51%
		opacity 1
		
@keyframes animateIconRight
	49%
		transform translateX(100%)
	50%
		opacity 0
		transform translateX(-100%)
	51%
		opacity 1
