/*!  FOOTER
----------------------------------------------------------*/

// GENERAL

.vl-footer-holder
	position relative
	width 100%
	.vl-footer-inner
		padding 80px 0

.vl-footer-holder[data-footer-fixed="1"]
	position fixed
	bottom 0
	left 0
	z-index 50

.vl-footer-fixed .vl-content-holder
	position relative
	z-index 60

@media (max-width: 768px)
	.vl-footer-holder .vl-footer-inner [class^="col"] + [class^="col"]
		margin-top 50px
	.vl-footer-holder[data-footer-fixed="1"]
		position static
	.vl-footer-fixed .vl-content-holder
		margin-bottom 0 !important


.vl-footer-holder .vl-footer-inner

	.vl-footer-copyright
		margin-top 40px
		color $c1
		p
			margin-bottom 0
			
	.vl-site-logo
		display inline-flex
		margin-bottom 40px
			
	.vl-footer-menu
		ul
			list-style-type none
			margin 0
			padding 0
			li
				display inline-flex
				margin 0 10px
				a
					text-transform uppercase
					font-size 14px
					color $c2
					&:hover
						color $c0

