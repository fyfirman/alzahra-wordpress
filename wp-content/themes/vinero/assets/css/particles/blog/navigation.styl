/*!  PAGINATION NUMERIC
----------------------------------------------------------*/

.vl-pagination-numeric
	margin-top 100px
	padding-top 50px
	text-align center
	position relative
	&::after
		content: ''
		display block
		position absolute
		top 0
		left 50%
		margin-left -15px
		width 30px
		height 2px
		background-color $c0
	span,
	a
		display inline-flex
		height 40px
		line-height 40px
		padding 0 16px
		align-items center
		justify-content center
		background-color $c8
		color $c1
		margin-right 6px
		&:last-child
			margin-right 0
			
	span.current,
	a:hover
		color $c6
		background-color $c0
		
	@media (max-width: 575px)
		font-size 32px


/*!  PAGINATION LOAD MORE BTN
----------------------------------------------------------*/

.vl-pagination-load-more-btn
	margin-top 100px
	padding-top 50px
	text-align center
	position relative
	&::after
		content: ''
		display block
		position absolute
		top 0
		left 50%
		margin-left -15px
		width 30px
		height 2px
		background-color $c0

/*!  PAGINATION INFINITE LOAD
----------------------------------------------------------*/

#infscr-loading
	position absolute
	bottom 0
	left 0
	width 100%
	z-index 10
	text-align center
	div
		display inline-block
		padding 9px 32px
		font-size 14px
		color $c6
		background-color $c0
	img
		display none !important
		

/*!  PAGE NAVIGATION
----------------------------------------------------------*/

.vl-page-navigation
	margin-top 50px
	a
		display inline-flex
		vertical-align middle
		font-size 40px
		line-height 1
		color $c3
		&:hover
			color $c0
			
	a + a
		margin-left 15px		


/*!  PORTFOLIO NAVIGATION
----------------------------------------------------------*/

.vl-portfolio-navigation
	padding 40px 0
	background-color $c0
	.vl-portfolio-navigation-inner
		display flex
		align-items center
		justify-content space-between
		a, span
			font-size 18px
		a
			color $c6
			&:hover
				color rgba($c6, 50%)
		.prev-post,
		.next-post
			&.inactive
				color rgba($c6, 50%)
				cursor not-allowed
		.prev-post i
			margin-right 5px
		.next-post i
			margin-left 5px


/*!  PAGINATION BUTTONS
----------------------------------------------------------*/

.vl-pagination-buttons
	margin-top 100px
	padding-top 50px
	text-align center
	position relative
	&::after
		content: ''
		display block
		position absolute
		top 0
		left 50%
		margin-left -15px
		width 30px
		height 2px
		background-color $c0
	ul
		margin 0
		padding 0
		list-style-type none
			
	li.prev-page,
	li.next-page
		position relative
		display inline-flex
		height 40px
		width 40px
		background-color $c8
		&.inactive
			cursor not-allowed
			
		a
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			line-height 40px
			color $c1
			i
				position relative
				z-index 3
			
			span
				position absolute
				top 0
				height 100%
				background-color $c0
				color transparent
				z-index 2
				font-size 12px
				text-transform uppercase
				letter-spacing 2px
				line-height 40px
				pointer-events none
				transform scaleX(0)
				transition all 300ms $transition
	
	li.prev-page a span
		right 0
		padding-right 55px
		padding-left 15px
		transform-origin right
		
	li.next-page a span
		left 0
		padding-left 55px
		padding-right 15px
		transform-origin left

	
	li.prev-page + li.next-page
		margin-left 6px

	li.prev-page a:hover,
	li.next-page a:hover
		color $c6
		transition-delay 150ms
		span
			color $c6
			transform scaleX(1)
		


/*!  NAVIGATION BLOG
----------------------------------------------------------*/

.vl-post-navigation
	margin-top 50px
	
	.prev-post,
	.next-post
		display inline-flex
		vertical-align middle
		font-size 40px
		line-height 1
		color $c3
		&.inactive
			color $c7
			cursor not-allowed
	
	.prev-post + .next-post
		margin-left 15px
			
	a:hover
		color $c0
	
	a,
	span
		margin-right 15px
		&:last-child
			margin-right 0